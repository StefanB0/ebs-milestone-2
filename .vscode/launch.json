  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "test",
      ],
      "django": true,
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Django Runserver",
      "type": "debugpy",
      "request": "launch",
      "args": [
        "runserver"
      ],
      "justMyCode": false,
      "django": true,
      "autoStartBrowser": false,
      "program": "${workspaceFolder}\\manage.py"
    }
  ]
}